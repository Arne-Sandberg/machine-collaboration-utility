extends ../layout

block content
  div.header
    .container
      div.col-xs-3
        .logo
          img(src= "images/logo.svg")
        h2.hidden-xs
          span.bold Hydra
          span Print
      div.col-xs-9.float-right
        ul
          li
            a
              span.hidden-xs Jobs
              span.hidden-sm.hidden-md.hidden-lg
                i.fa.fa-list
          li
            a
              span.hidden-xs Files
              span.hidden-sm.hidden-md.hidden-lg
                i.fa.fa-file
          li
            a
              span.hidden-xs Dashboard
              span.hidden-sm.hidden-md.hidden-lg
                i.fa.fa-tachometer
  div.container
    .hydraTabs(data-example-id='togglable-tabs')
      ul#hydraTabs.nav.nav-tabs(role='tablist')
        li.active(role='presentation')
          a#home-tab(href='#dashboard', role='tab', data-toggle='tab', aria-controls='home', aria-expanded='true') Dashboard
        li(role='presentation')
          a#profile-tab(href='#terminal', role='tab', data-toggle='tab', aria-controls='profile', aria-expanded='false') Terminal

      #hydraTabContent.tab-content
        #dashboard.tab-pane.fade.row.active.in(role='tabpanel', aria-labelledby='dashboard-tab')
          include dashboard
        #terminal.tab-pane.row.fade(role='tabpanel', aria-labelledby='terminal-tab')
          ul#terminal-reply
          form#gcode-terminal
            input(id='gcode-input', type='text', name='gcode', value='', autocomplete="off", placeholder="Put some sweet GCode in here")
            input(type='submit', value='Send GCode')

    div.content
      div.row
        div#jobs.col-md-6
          h2 Jobs
        div#files.col-md-6
          h2 Files
          form(id='file-form', enctype='multipart/form-data')
            input(id='file-form-input' name='file', type='file' style='display:none')
            #select-file Upload File
          #file-upload-progress-bar
            #file-upload-progress
  div.footer
    script(src='/js/vendor/jquery.min.js')
    script(src='/js/vendor/bootstrap.min.js')
    script var ip = !{JSON.stringify(ip)}
    script var jobs = !{JSON.stringify(jobs)}
    script var files = !{JSON.stringify(files)}
    script(src='/socket.io/socket.io.js')
    script(src='/js/ui/client.js')
