extends ../layout

block content
  p Hardware State: 
    span#hardwareState= clientState
  div#jobs
    each job in jobs
      div(id = 'job_' + job.uuid)
        ul
          li UUID: !{job.uuid}
          li State: 
            span(id = 'job_' + job.uuid + '_state') !{job.state}
          li Started: !{job.started}
          li Elapsed: !{job.elapsed}
          li Percent Complete: !{job.percentComplete}

  script(src='/js/vendor/jquery.min.js')
  script(src='/socket.io/socket.io.js')
  script(src='/js/ui/client.js')
